
 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<style>
  @import url("https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&subset=devanagari,latin-ext");

  @keyframes cambioColore {
    from {
      background-color: #8eff8a; 
    }
    to {
      background-color: #0a660a; 
    }
  }

  body {
    animation: cambioColore 3s infinite alternate; 
  }

.card {
  border-radius: 10px;
  width: 450px;
  height: 450px;
  background-color: black;
  color: lime;
  padding: 20px;
  float:left;
  z-index: 0;
  overflow: hidden;
  transition: 0.6s ease-in;
  box-shadow: 0px 0px 75px 3px rgba(0,0,0,0.78);
}

.card::before {
  position: absolute;
  z-index: -1;
  top: -15px;
  right: -15px;
  background: lime;
  height:300px;
  width: 25px;
  border-radius: 32px;
  transform: scale(1);
  transform-origin: 50% 50%;
  transition: transform 0.25s ease-out;

}

.card:hover::before{
    transition-delay:0.2s ;
  transform: scale(40);
}

.card:hover{
    color: white;
}

.card p{
    padding: 5px 0;
}
  
</style>

<div class="row"  style="margin-left:25px; margin-top:28px;" class="card">
    <% data.forEach(function(item) { %>
       <div style="margin-left:35px;margin-top:30px;" class="col">
        <div class="card">
            <p>Nome:<%= item.Nome %></p>
            <p>Cognome:<%= item.Cognome %></p>
           <p>Gmail:<%= item.Gmail %></p>
           <p>Numero di telefono:<%= item.Num %></p>
           <p>Domanda:<%= item.Domanda %></p>
        </div>
    </div>
    <% }); %>
</div>